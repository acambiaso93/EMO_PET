
<div class="container">
  <div class="d-flex flex-column rounded-5 showcard">
    <div class="ps-4 py-3">
      <h1>New Pet</h1>
      <%= form_with(model: @pet, url: pets_path, method: :post, data: {turbo: false}) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :breed %>
          <%= form.text_field :breed, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: "form-control" %>
        </div>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="form-group">
          <%= form.label :photo %>
          <%= form.file_field :photo, class: "form-control" %>
        </div>

        <div class="actions">
          <%= form.submit "CREATE PET", class:"m-4 btn btn-outline-dark w-25 showcard-form-button" %>
        </div>
      <% end %>
      <div>
        <%= link_to '<i class="fa-solid fa-arrow-left-long"></i>'.html_safe, dashboard_path %>
      </div>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
