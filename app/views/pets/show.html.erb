<div class="container">
  <div class="row">
    <div class="col">
      <div class="card-show d-flex">
        <%= image_tag "rabbit-charlie", width: 200 %>
        <div class="card-info d-flex flex-column justify-content-between">
          <div class="info">
            <h1>
              <%= @pet.name %>
            </h1>
            <small>
              <%= @pet.breed %> <br>
              <%= @pet.address %>
              <%= @pet.description %>
            </small>
          </div>
          <div class="btn btn-primary">
            Book me
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
