<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8">
    <div class="my-3">
      <h1><%= @pet.name %></h1>
      <small class="tag"><%= @pet.breed %></small>
    </div>

      <div class="card-show d-flex">
        <%= image_tag @pet.image_url, width: 400 %>
        <div class="card-info d-flex flex-column justify-content-between w-100">
          <div class="info d-flex flex-column shrink">
            <small class="mt-3">
              <strong>Address: </strong><%= @pet.address %> <br>
              <strong>Description: </strong> <br>
              <%= @pet.description %>
            </small>
          </div>

        </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card-booking">
        <h3> When do you want to have me? </h3>
        <%= render "bookings/form", pet: @pet, booking: @booking %>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card-reviews">
        <h3> Reviews </h3>
        <% if @pet.bookings.empty? %>
          <p>no reviews</p>
        <% else %>
          <% @pet.bookings.each do |booking| %>
           <% next if booking.review.nil? %>
            <%= render "reviews/card", review: booking.review %>
          <% end %>
        <% end %>
      </div>
    </div>

    <h3>You can pick me up here</h3>
    <div class="my-3" style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
