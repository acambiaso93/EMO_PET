 <div class="container-main">
  <div class="pet-container">
    <% @pets.each do |pet| %>
      <%= link_to pet_path(pet), class: "pet-card" do %>
        <%= image_tag pet.image_url, class: "pet-image" %>
        <div class="pet-text">
          <h2><%= pet.name %></h2>
          <p><%= pet.breed %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
