<!-- app/views/pets/index.html.erb -->

<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <%= image_tag pet.image_url, class: "card-img-top", alt: pet.name %>
        <div class="card-body">
          <h5 class="card-title"><%= pet.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= pet.breed %></h6>
          <p class="card-text"><%= link_to 'See more details', pet_path(pet), class: 'btn btn-primary' %>
</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
