<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= pet.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= pet.breed %></h6>
          <p class="card-text"><%= pet.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
