<div>
  <%= link_to '<i class="fa-solid fa-arrow-left-long"></i>'.html_safe, dashboard_path %>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>New Pet</h1>
      <%= form_with(model: @pet, url: pets_path, method: :post) do |form| %>
        <div class="form__input">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form__input" %>
        </div>
        <div class="form__input">
          <%= form.label :breed %>
          <%= form.text_field :breed, class: "form__input" %>
        </div>
        <div class="form__input">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form__input" %>
        </div>
        <div class="form__input">
          <%= form.label :address %>
          <%= form.text_area :address, class: "form__input" %>
        </div>
        <div class="form__input">
          <%= form.label :image_url %>
          <%= form.text_field :image_url, class: "form__input" %>
        </div>
        <div class="actions">
          <%= form.submit "CREATE PET", class:"m-4 btn btn-outline-dark w-25 showcard-form-button" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
