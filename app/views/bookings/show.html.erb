<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8">
      <div class="card-show d-flex">
        <%= image_tag "rabbit-charlie", width: 400 %>
        <div class="card-info d-flex flex-column justify-content-between w-100">
          <div class="info d-flex flex-column shrink">
            <h1>
              <%= @pet.name %>
            </h1>
            <small style="color:grey">
              <%= @pet.breed %> <br>
            </small>
            <small>
              <%= @pet.address %>
              <%= @pet.description %>
            </small>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
